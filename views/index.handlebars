<div class="jumbotron">
  <h1>Burgers!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <h5>Burgers that are not devoured!</h5>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h5>Burgers that are devoured!</h5>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row burgerAdd">
    <div class="col-6">
      <h2>Add a burger</h2>
      <img class="burgerImage" src="https://cdn.shortpixel.ai/client/q_lossy,ret_img,w_1536/https://syrupandbiscuits.com/wp-content/uploads/2011/08/IMG_6693.jpg">
    </div>
    <div class="col-6">
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div>

        <button class="submit" type="submit">Add burger</button>
      </form>
    </div>
  </div>
</div>